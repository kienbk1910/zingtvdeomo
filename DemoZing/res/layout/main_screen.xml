<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <include layout="@layout/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Video Mới Nổi Bật" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <com.example.demozing.custom.VideoComponent
                    android:layout_marginLeft="5dp"
                    android:id="@+id/video1"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video2"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video3"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video4"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video5"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video6"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            style="@style/category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="Tin Tức" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video7"
                    android:layout_width="130dp"
                      android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video8"
                    android:layout_width="130dp"
                      android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video9"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video10"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video11"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video12"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            style="@style/category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:text="Bóng Đá" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video13"
                    android:layout_width="130dp"
                      android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video14"
                    android:layout_width="130dp"
                      android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video15"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video16"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
                <com.example.demozing.custom.VideoComponent
                    android:id="@+id/video17"
                      android:layout_marginLeft="5dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content" />
                
